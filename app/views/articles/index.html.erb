<div class="container">
    <h1 class="text-center">Articles listing page</h1>
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Description</th>
                <th class= "text-center" colspan="3">Actions</th>
                <th class= "text-center">Time Updated</th>
                
            </tr>
        </thead>

        <tbody>
            <% @articles.each do |article |%>
                <tr>
                    <td> 
                        <%= link_to article.title, article_path(article), class:"text-decoration-none text-success text-uppercase" %> 
                        </br>
                        by <%= article.user.username%>
                    </td>
                    <td> <%= truncate(article.description, length: 100)%></td>
                    <td> <%= link_to "Show", article_path(article) %> </td>
                    <td> <%= link_to "Edit", edit_article_path(article) %></td>
                    <td> <%= button_to 'Delete', article_path(article), method: :delete %> 
                        OR </br>
                        <%= link_to "Destroy", article_path(article), data: {
                            "turbo_method": :delete,
                            "turbo_confirm": "Are you sure?"
                        } %>
                    </td>
                    <td> Created <%= time_ago_in_words(article.created_at)%> ago, edited <%= time_ago_in_words(article.updated_at)%></td>
                </tr>
            <%end%>
        </tbody>

        
    </table>

    <p>
        
    </p>
</div>

