
<div class="container">
    <%= render 'shared/errors', obj: @article%>

    <div class="card">
        <div class="card-body">
            <%= form_with(model: @article, local: true) do |f|%>
                
                <div class="field form-group">
                    <%= f.label :title , class: "col-2 col-form-label" %> </br>
                    <%= f.text_field :title , class:"form-control", placeholder: "Article Title" %>
                </div>
                </br>
                <div class="field form-group">
                    <%= f.label :description%> </br>
                    <%= f.text_area :description, rows:10, class:"form-control", placeholder: "Article Description" %>
                    </div>
                    </br>
                <div>

                <div class="field form-group">
                    <%= f.label :category%> </br>
                        <%= f.collection_select(:category_ids, Category.all, :id, :name, 
                        { prompt: "Make your selection from the list below (can be empty)"}, 
                        { multiple: true, size: 3,  class: "form-control custom-select"}) %>
                    </div>
                    </br>
                <div>
                    <%= f.submit class:"btn btn-secondary"%>
                </div>
            <%end%>
        </div>
    </div>
</div>

