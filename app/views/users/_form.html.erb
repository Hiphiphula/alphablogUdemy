<div class="container">
    <%= render 'shared/errors', obj:@user%>

    <div class="card">
        <div class="card-body">
            <%= form_with(model: @user, local: true) do |f|%>
                
                <div class="field form-group">
                    <%= f.label :username , class: "col-2 col-form-label" %> </br>
                    <%= f.text_field :username , class:"form-control", placeholder: "Enter a username" %>
                </div>
                </br>
                <div class="field form-group">
                    <%= f.label :email%> </br>
                    <%= f.email_field :email, class:"form-control", placeholder: "Enter your email" %>
                    </div>
                    </br>
                <div>

                <div class="field form-group">
                    <%= f.label :password%> </br>
                    <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
                    </div>
                    </br>
                <div>
                    <%= f.submit "Sign Up", class:"btn btn-secondary"%>
                </div>
            <%end%>
        </div>
    </div>
</div>

