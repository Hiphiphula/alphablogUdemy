<div class="container">
      <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == "notice" ? "success" : "danger"%> alert dismissable fade show d-flex" role="alert">
                  <div class="col">
                        <%= msg %>
                  </div>
                  <div class="col-0.5">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                  
            </div>
      <%end%>
</div>
